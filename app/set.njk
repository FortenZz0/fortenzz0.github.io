{% macro nav_item(title, url, disabled, divider, dropdown, is_dropdown_item=false) %}
    {% if divider %}
        <li>
            <hr class="dropdown-divider">
        </li>
    {% else %}
        <li class="{% if not is_dropdown_item %}nav_item{% endif %}{% if dropdown %} dropdown{% endif %}">

            {% if dropdown %}
                <a class="text-muted nav-link dropdown-toggle" href="{{ url }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {% else %}
                <a class="text-muted {% if is_dropdown_item %}dropdown-item{% else %}nav-link{% endif %}" href="{{ url }}">
            {% endif %}

                {{ title }}
            </a>

            {% if dropdown %}
                <ul class="dropdown-menu">
                    {% for item in dropdown %}
                        {{ nav_item(item.title, item.url, item.disabled, item.divider, item.dropdown, true) }}
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endif %}
{% endmacro %}